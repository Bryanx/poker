<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RoomActivity"
    android:background="@color/colorBackground">

    <LinearLayout
        android:id="@+id/llFragment"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">
        <fragment
            android:id="@+id/fragmentChat"
            android:tag="@string/chat_fragment_tag"
            android:name="be.kdg.mobile_client.fragments.ChatFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnShowChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHAT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>