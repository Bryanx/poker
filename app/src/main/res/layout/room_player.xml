<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".room.RoomActivity">

    <data>

        <variable
            name="isVisible"
            type="Boolean" />

        <variable
            name="player"
            type="be.kdg.mobile_client.room.model.Player" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="@{isVisible}">

        <TextView
            android:id="@+id/tvStatusPlayerPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@{player.lastAct.toString()}"
            android:textAlignment="center"
            android:textColor="@color/colorTransparent"
            app:player_status_color="@{player.lastAct.toString()}"
            app:layout_constraintBottom_toTopOf="@+id/btnPlayerPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnPlayerPrimary"
            android:layout_width="@dimen/player_button"
            android:layout_height="@dimen/player_button"
            android:background="@{player.myTurn ? @drawable/circle_green : @drawable/circle_white}"
            android:text="@{player.username.charAt(0)}"
            android:textColor="@color/colorWhite"
            android:textSize="32sp"
            android:typeface="sans"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCashPlayerPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@{player.chipCount}"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnPlayerPrimary" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>